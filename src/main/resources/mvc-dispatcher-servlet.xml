<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                         http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context-3.2.xsd
                        http://www.springframework.org/schema/mvc
                        http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd">


    <!-- 控制器 -->
    <bean name="/index.action" class="com.qs.test.controller.HelloAction">
        <!-- 配置页面请求只支持 -->
        <!--<property name="supportedMethods" value="POST"/>-->

        <!-- 设置进入控制器需要有session -->
        <!--<property name="requireSession" value="true"/>-->

        <!-- 设置浏览器缓存5s -->
        <property name="cacheSeconds" value="5"/>
    </bean>

    <bean name="/test.action" class="com.qs.test.controller.TestAction">
        <!-- 设置浏览器缓存5s -->
        <property name="cacheSeconds" value="5"/>
    </bean>

    <!-- 测试ServletForwardingController -->
    <bean name="/forwordServlet" class="org.springframework.web.servlet.mvc.ServletForwardingController">
        <property name="servletName" value="forwarding"/>
    </bean>

    <!-- 测试BaseCommandController 将前台参数封装为实体 -->
    <bean name="/testCommand.action" class="com.qs.test.controller.CommandController">
        <!--<property name="commandClass" value="com.qs.test.model.UserModel"/>-->
    </bean>

    <import resource="spring-mvc-annotation.xml"/>
</beans>